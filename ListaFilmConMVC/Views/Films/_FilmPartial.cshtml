@model ListaFilmConMVC.Models.Film

@{
}

<div class="card" style="width:380px">

    <img class="card-img-top" src="@Url.Action("GetDB","FileUpload", new {Id = @Model.Picture.PictureID} )"/>

    <div class="card-header">

        Film

    </div>

    <div class="card-body">

        <div class="card-title">

            @Model.Title;
            
        </div>



        <div class="card-text">

            @(Model.Year)

        </div>


        <div class="card-text">

            @(Model.Type)

        </div>



    </div>

    <div class="card-footer">

        <br />

    </div>

</div>